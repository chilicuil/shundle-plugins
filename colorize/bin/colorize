#!/usr/bin/env sh

_basename()
{
    [ -z "${1}" ] && return 1 || _basename_var_name="${1}"
    [ -z "${2}" ] || _basename_var_suffix="${2}"
    case "${_basename_var_name}" in
        /*|*/*) _basename_var_name="${_basename_var_name##*/}"
    esac

    if [ -n "${_basename_var_suffix}" ] && [ "${#_basename_var_name}" -gt "${#2}" ]; then
        _basename_var_name="${_basename_var_name%$_basename_var_suffix}"
    fi

    retval="${_basename_var_name}"
    #printf "%s" "${_basename_var_name}"
}

_usage()
{   #prints an usage msg and exits with 0
    printf "%s\\n" "Usage: colorize OPTION [ARGS]"
    printf "\\n"
    printf "%s\\n" "  enable            enable theme"
    printf "%s\\n" "  list              list available themes"
    printf "%s\\n" "  show              show theme source"
    return 1
}

_colorize_source()
{
    [ -z "${1}" ] && return

    case "${1}" in
        *.ps)    _basename "${1}" .ps;   COLORIZE_PS="${retval}"     ;;
        *.theme) _basename "${1}" .theme; COLORIZE_THEME="${retval}" ;;
    esac
    . "${1}"
}

_colorize_list()
{
    _colorize_list_sourced()
    {
        [ -z "${1}" ] && return 1
        case "${1}" in
            "${COLORIZE_THEME}"|"${COLORIZE_PS}") return 0 ;;
        esac
        return 1
    }

    printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_BLUE}" "ps" "${_BIN_SHUNDLE_ENV_NORMAL}"
    for ps in "${COLORIZE_PATH}"/ps/*; do
        _basename "${ps}" .ps
        bps="${retval}"
        if _colorize_list_sourced "${bps}"; then
            printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_RED}" " +${bps}" "${_BIN_SHUNDLE_ENV_NORMAL}"
        else
            printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_RED}" "  ${bps}" "${_BIN_SHUNDLE_ENV_NORMAL}"
        fi
    done

    printf "\\n"
    printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_BLUE}" "theme" "${_BIN_SHUNDLE_ENV_NORMAL}"
    for theme in "${COLORIZE_PATH}"/theme/*; do
        _basename "${theme}" .theme
        btheme="${retval}"
        if _colorize_list_sourced "${btheme}"; then
            printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_RED}" " +${btheme}" "${_BIN_SHUNDLE_ENV_NORMAL}"
        else
            printf "%b%s%b\\n" "${_BIN_SHUNDLE_ENV_RED}" "  ${btheme}" "${_BIN_SHUNDLE_ENV_NORMAL}"
        fi
    done
}

_colorize_enable()
{
    [ -z "${1}" ] && _usage

    [ -f "${COLORIZE_PATH}/ps/${1}.ps" ]       && { _colorize_source "${COLORIZE_PATH}/ps/${1}.ps";       return 0; }
    [ -f "${COLORIZE_PATH}/theme/${1}.theme" ] && { _colorize_source "${COLORIZE_PATH}/theme/${1}.theme"; return 0; }
}

_colorize_show()
{
    [ -z "${1}" ] && _usage

    [ -f "${COLORIZE_PATH}/ps/${1}.ps" ]       && { cat "${COLORIZE_PATH}/ps/${1}.ps";       return 0; }
    [ -f "${COLORIZE_PATH}/theme/${1}.theme" ] && { cat "${COLORIZE_PATH}/theme/${1}.theme"; return 0; }
}

if [ "${#}" -lt "1" ]; then
   _usage
else
    case "${1}" in
        l*) _colorize_list         ;;
        s*) _colorize_show   "${2}";;
        e*) _colorize_enable "${2}";;
        *)  _usage                 ;;
    esac
fi

# vim: set ts=8 sw=4 tw=0 ft=sh : 
