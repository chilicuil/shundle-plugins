#!/bin/sh
# Base16 Brewer - Shell color setup script
# TimothÃ©e Poisot (http://github.com/tpoisot)

if [ "${TERM%%-*}" = 'linux' ]; then
    # This script doesn't support linux console (use 'vconsole' template instead)
    return 2>/dev/null || exit 0
fi

color0="0c/0d/0e"     # Base 00 - Black
color1="e3/1a/1c"     # Base 08 - Red
color2="31/a3/54"     # Base 0B - Green
color3="dc/a0/60"     # Base 0A - Yellow
color4="31/82/bd"     # Base 0D - Blue
color5="75/6b/b1"     # Base 0E - Magenta
color6="80/b1/d3"     # Base 0C - Cyan
color7="b7/b8/b9"     # Base 05 - White
color8="73/74/75"     # Base 03 - Bright Black
color9="$color1"      # Base 08 - Bright Red
color10="$color2"     # Base 0B - Bright Green
color11="$color3"     # Base 0A - Bright Yellow
color12="$color4"     # Base 0D - Bright Blue
color13="$color5"     # Base 0E - Bright Magenta
color14="$color6"     # Base 0C - Bright Cyan
color15="fc/fd/fe"    # Base 07 - Bright White
color16="e6/55/0d"    # Base 09
color17="b1/59/28"    # Base 0F
color18="2e/2f/30"    # Base 01
color19="51/52/53"    # Base 02
color20="95/96/97"    # Base 04
color21="da/db/dc"    # Base 06
foreground="51/52/53" # Base 02
background="fc/fd/fe" # Base 07
cursor="51/52/53"     # Base 02

if [ -n "$TMUX" ]; then
  # tell tmux to pass the escape sequences through
  # (Source: http://permalink.gmane.org/gmane.comp.terminal-emulators.tmux.user/1324)
  printf_template="\033Ptmux;\033\033]4;%d;rgb:%s\007\033\\"
  printf_template_var="\033Ptmux;\033\033]%d;rgb:%s\007\033\\"
elif [ "${TERM%%-*}" = "screen" ]; then
  # GNU screen (screen, screen-256color, screen-256color-bce)
  printf_template="\033P\033]4;%d;rgb:%s\007\033\\"
  printf_template_var="\033P\033]%d;rgb:%s\007\033\\"
else
  printf_template="\033]4;%d;rgb:%s\033\\"
  printf_template_var="\033]%d;rgb:%s\033\\"
fi

# 16 color space
printf $printf_template 0  $color0
printf $printf_template 1  $color1
printf $printf_template 2  $color2
printf $printf_template 3  $color3
printf $printf_template 4  $color4
printf $printf_template 5  $color5
printf $printf_template 6  $color6
printf $printf_template 7  $color7
printf $printf_template 8  $color8
printf $printf_template 9  $color9
printf $printf_template 10 $color10
printf $printf_template 11 $color11
printf $printf_template 12 $color12
printf $printf_template 13 $color13
printf $printf_template 14 $color14
printf $printf_template 15 $color15

# 256 color space
printf $printf_template 16 $color16
printf $printf_template 17 $color17
printf $printf_template 18 $color18
printf $printf_template 19 $color19
printf $printf_template 20 $color20
printf $printf_template 21 $color21

# foreground / background / cursor color
printf $printf_template_var 10 $foreground
printf $printf_template_var 11 $background
printf $printf_template_var 12 $cursor

# clean up
unset printf_template
unset printf_template_var
unset color0
unset color1
unset color2
unset color3
unset color4
unset color5
unset color6
unset color7
unset color8
unset color9
unset color10
unset color11
unset color12
unset color13
unset color14
unset color15
unset color16
unset color17
unset color18
unset color19
unset color20
unset color21
unset foreground
unset background
unset cursor
